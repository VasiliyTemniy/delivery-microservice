grpc.server.port=8000
spring.application.name=delivery-microservice
server.port=8080

server.shutdown=graceful
spring.lifecycle.timeout-per-shutdown-phase=30s

grpc.server.reflection-service-enabled=true

spring.r2dbc.name=delivery
spring.r2dbc.password=${DB_PASSWORD}
spring.r2dbc.username=${DB_USERNAME}
spring.r2dbc.url=r2dbc:postgresql://${DB_HOST}/delivery
spring.r2dbc.pool.max-size=30
spring.data.r2dbc.repositories.enabled=true
spring.r2dbc.pool.initial-size=20

spring.flyway.validate-on-migrate=true
spring.flyway.user=${DB_USERNAME}
spring.flyway.password=${DB_PASSWORD}
spring.flyway.url=jdbc:postgresql://${DB_HOST}/delivery
spring.flyway.schemas=["delivery"]